#:kivy 1.11.1
<MenuScreen>:
  name: "menu"
  
  FloatLayout:
    Label:
      id: title
      pos_hint:{"x": 0.1, "top":0.9}
      size_hint: 0.8, 0.2
      text: "MASTERMIND"
      font_size: 75
      bold: True

    Button:
      id: game
      pos_hint:{"x":0.35, "y": 0.55}
      size_hint:0.3,0.1
      text: "Start"
      font_size: 35
      # background_color: 0, 0, 0, 0
      on_release:
        app.root.current = "game"
        root.manager.transition.direction = "left"

    Button:
      id: leaderboard
      pos_hint:{"x":0.35, "y": 0.40}
      size_hint:0.3,0.1
      text: "Leaderboard"
      font_size: 35
      # background_color: 0, 0, 0, 0
      on_release:
        app.root.current = "game"
        root.manager.transition.direction = "left"

    Button:
      id: quit
      pos_hint:{"x":0.35, "y": 0.25}
      size_hint:0.3,0.1
      text: "Quit"
      font_size: 35
      # background_color: 0, 0, 0, 0
      on_release:
        app.root.current = "game"
        root.manager.transition.direction = "left"

